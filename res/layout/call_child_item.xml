<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dxq_theme"
    android:gravity="center_horizontal"
    android:orientation="vertical" 
    android:padding="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:text="电话:"
            android:textColor="@color/grays"
            android:textSize="@dimen/name" />

        <TextView
            android:id="@+id/tv_call_child"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView3"
            android:layout_alignBottom="@+id/textView3"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/textView3"
            android:text="18642026666"
            android:textColor="@color/grays"
            android:textSize="@dimen/name" />

        <ImageView
            android:id="@+id/im_call_child"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="80dp"
            android:src="@drawable/dxq_bule_phone" />

        <ImageView
            android:id="@+id/imsms_call_child"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_call_child"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/dxq_bule_sms" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imsave_call_child"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dxq_save_c" 
        android:layout_marginTop="20dp"/>
</LinearLayout>