<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bg"
        android:background="@color/blue" >

        <LinearLayout
            android:id="@+id/dt_back_ly"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@drawable/back" />
        </LinearLayout>

        <TextView
            android:id="@+id/dt_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="联系人详情"
            android:textColor="@color/white"
            android:textSize="@dimen/title" />
         <ImageView
            android:id="@+id/dt_title_imcopy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/dxq_set_onedown" />
         
    </RelativeLayout>

    <ScrollView
        android:id="@+id/dt_sl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="@color/dxq_theme">

                <com.daxiangqun.contacts.library.RoundedImageView
                    android:id="@+id/dt_duty_im"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon" />

                <TextView
                    android:id="@+id/dt_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/dt_duty_im"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/dt_duty_im"
                    android:text="名字"
                    android:textColor="@color/black"
                    android:textSize="@dimen/title17" />

                <TextView
                    android:id="@+id/dt_duty_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/dt_name_tv"
                    android:layout_below="@+id/dt_name_tv"
                    android:layout_marginTop="3dp"
                    android:text="职位"
                    android:textColor="@color/grays"
                    android:textSize="@dimen/details" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/graychild" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:text="电话:"
                    android:textColor="@color/grays"
                    android:textSize="@dimen/name" />

                <TextView
                    android:id="@+id/dt_tel_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView1"
                    android:layout_alignBottom="@+id/textView1"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@+id/textView1"
                    android:text="666666"
                    android:textColor="@color/grays"
                    android:textSize="@dimen/name" />

                <ImageView
                    android:id="@+id/dt_tel_im"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="80dp"
                    android:src="@drawable/dxq_bule_phone" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/graychild" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:text="传真:"
                    android:textColor="@color/grays"
                    android:textSize="@dimen/name" />

                <TextView
                    android:id="@+id/dt_fax_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView2"
                    android:layout_alignBottom="@+id/textView2"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@+id/textView2"
                    android:text="18642026666"
                    android:textColor="@color/grays"
                    android:textSize="@dimen/name" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/graychild" />

            <RelativeLayout
                android:id="@+id/det_ly_phone1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp" >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:text="手机:"
                    android:textColor="@color/grays"
                    android:textSize="@dimen/name" />

                <TextView
                    android:id="@+id/dt_phone1_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView3"
                    android:layout_alignBottom="@+id/textView3"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@+id/textView3"
                    android:text="18642026666"
                    android:textColor="@color/grays"
                    android:textSize="@dimen/name" />

                <ImageView
                    android:id="@+id/dt_phone1_im"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="80dp"
                    android:src="@drawable/dxq_bule_phone" />

                <ImageView
                    android:id="@+id/dt_phone1_imsms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/dt_phone1_tv"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/dxq_bule_sms" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/graychild" />

            <RelativeLayout
                android:id="@+id/det_ly_phone2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp" >

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:text="手机:"
                    android:textColor="@color/grays"
                    android:textSize="@dimen/name" />

                <TextView
                    android:id="@+id/dt_phone2_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView4"
                    android:layout_alignBottom="@+id/textView4"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@+id/textView4"
                    android:text="18642026666"
                    android:textColor="@color/grays"
                    android:textSize="@dimen/name" />

                <ImageView
                    android:id="@+id/dt_phone2_im"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="80dp"
                    android:src="@drawable/dxq_bule_phone" />

                <ImageView
                    android:id="@+id/dt_phone2_imsms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/dt_phone2_tv"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/dxq_bule_sms" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/graychild" />

            <RelativeLayout
                android:id="@+id/det_ly_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp" >

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:text="邮箱:"
                    android:textColor="@color/grays"
                    android:textSize="@dimen/name" />

                <TextView
                    android:id="@+id/dt_email_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView5"
                    android:layout_alignBottom="@+id/textView5"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@+id/textView5"
                    android:text="lvyouju@163.com"
                    android:textColor="@color/grays"
                    android:textSize="@dimen/name" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/graychild" />

            <RelativeLayout
                android:id="@+id/det_ly_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp" >

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:text="网址:"
                    android:textColor="@color/grays"
                    android:textSize="@dimen/name" />

                <TextView
                    android:id="@+id/dt_url_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView6"
                    android:layout_alignBottom="@+id/textView6"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@+id/textView6"
                    android:text="www.lvyouju.com"
                    android:textColor="@color/grays"
                    android:textSize="@dimen/name" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/graychild" />

            <RelativeLayout
                 android:id="@+id/det_ly_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp" >

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:text="地址:"
                    android:textColor="@color/grays"
                    android:textSize="@dimen/name" />

                <TextView
                    android:id="@+id/dt_address_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@+id/textView7"
                    android:text="北京市东城区"
                    android:textColor="@color/grays"
                    android:textSize="@dimen/name" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/graychild" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>